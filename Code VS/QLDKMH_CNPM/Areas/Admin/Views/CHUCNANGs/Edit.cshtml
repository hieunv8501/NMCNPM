@model QLDKMH_CNPM.Models.CHUCNANG

@{ 
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml"; 
}

<h3 class="text-left text-danger controllerStyle">SỬA THÔNG TIN CHỨC NĂNG</h3>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal generalStyle" style="color: black;">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaChucNang)
    <hr />
    <div class="form-group">
        <div class="control-label">Tên chức năng</div>
        <div>
            @Html.EditorFor(model => model.TenChucNang, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenChucNang, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label">Tên màn hình được load</div>
        <div>
            @Html.EditorFor(model => model.TenManHinhDuocLoad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenManHinhDuocLoad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            <input type="submit" value="Lưu" class="btn btn-danger btnStyle" />
            <span>
                @Html.ActionLink("Hủy", "Index", new { id = Model.MaChucNang }, new { @class = "btn btn-primary btnStyle" })
            </span>
        </div>
    </div>
</div>
}