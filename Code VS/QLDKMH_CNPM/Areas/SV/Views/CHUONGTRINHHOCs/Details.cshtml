@model IEnumerable<QLDKMH_CNPM.Models.CHUONGTRINHHOC>

@{ 
   ViewBag.Title = "Details";
   Layout = "~/Areas/SV/Views/Shared/SVLayout.cshtml"; 
}

<h2 class="mb-1 text-danger controllerStyle">
    CHƯƠNG TRÌNH HỌC
</h2>
<hr />
@if (Model.Count() != 0)
{
    <h3 class="mb-1 text-danger controllerStyle">Khoa: @Model.FirstOrDefault().NGANH.KHOA.TenKhoa</h3>
    <h3 class="mb-1 text-primary controllerStyle">Ngành: @Model.FirstOrDefault().NGANH.TenNganh</h3> 
}
else 
{
    <h2 class="active controllerStyle generalStyle" style="color:blue">Ngành này chưa có chương trình học!</h2>
}
@*<h4 class="text-danger controllerStyle">
    Ngành: @ViewBag.TenNganh
</h4>*@

<div class="bg-light card generalStyle">
    <div id="dataTable_wrapper" class="dataTables_wrapper m-1 card-body m-1 p-1" style="background-color: white">
        <div>
            <div id="dataTable_wrapper" class="dataTables_wrapper">
                <table class="table table-bordered dataStyle" id="dataTable">
                    <thead>
                        <tr>
                            <th>Học kỳ</th>
                            <th>Mã môn học</th>
                            <th>Tên môn học</th>
                            <th>Số tín chỉ</th>
                            <th>Ghi chú</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>
                                @Html.DisplayFor(model => item.HocKy)
                            </th>
                            <td>
                                @Html.DisplayFor(model => item.MaMonHoc)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.MONHOC.TenMonHoc)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.MONHOC.SoTinChi)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.GhiChu)
                            </td>
                        </tr>
                     }
                </table>
            </div>

        </div>
    </div>
    <hr />
    <div class="form-group">
        <div>
            <a class="btn btn-primary btnStyle" href="@Url.Action("Index", "CHUONGTRINHHOCs", new { area = "SV", id = ViewData["TenDangNhap"] })">Quay lại</a>
        </div>
    </div>
</div>
