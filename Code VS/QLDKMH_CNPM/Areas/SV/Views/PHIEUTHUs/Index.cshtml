@model IEnumerable<QLDKMH_CNPM.Models.PHIEUTHU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/SV/Views/Shared/SVLayout.cshtml";
}
<!--Page Heading-->
<h3 class="mb-1 text-danger controllerStyle">DANH SÁCH PHIẾU THU</h3>
<hr />
<!--DataTable Showing-->
<div class="bg-light generalStyle">
    <div>
        <div id="dataTable_wrapper" class="dataTables_wrapper card-body m-1 p-1" style="background-color: white">
            <div>
                <div id="dataTable_wrapper" class="dataTables_wrapper">
                    <table class="table table-bordered dataTable dataStyle" id="dataTable">
                        <thead>
                            <tr>
                                <th>Số phiếu thu</th>
                                <th>Số Phiếu DKHP</th>
                                <th>Ngày lập phiếu</th>
                                <th>Số tiền thu</th>
                                <th style="text-align:center">Thao tác</th>
                            </tr>
                        </thead>
                        <!--This is for footer line-->
                        <tfoot>
                            <tr>
                                <th>Số phiếu thu</th>
                                <th>Số Phiếu DKHP</th>
                                <th>Ngày lập phiếu</th>
                                <th>Số tiền thu</th>
                                <th></th>
                            </tr>
                        </tfoot>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="vertical-align:middle;">
                                    @Html.DisplayFor(model => item.SoPhieuThu)
                                </td>
                                <td style="vertical-align:middle;">
                                    @Html.DisplayFor(modelItem => item.SoPhieuDKHP)
                                </td>
                                <td style="vertical-align:middle;">
                                    @Html.DisplayFor(modelItem => item.NgayLap)
                                </td>
                                <td style="vertical-align:middle;">
                                    @Html.DisplayFor(modelItem => item.SoTienThu)
                                </td>
                                <td>
                                    <!--EFFECT 1: line with blue-->
                                    <div class="container">
                                        <div class="dropdown nav-item">
                                            <button type="button" class="btn btn-outline-danger dropdown-toggle alert-primary" style="font-weight: 500; font-size: small;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                                Tùy chọn
                                            </button>
                                            <div class="dropdown-menu" style="text-align:center" aria-labelledby="navbarDropdownMenuLink">
                                                <a class="dropdown-item" href="@Url.Action("Details", "PHIEUTHU", new { id = item.SoPhieuThu})">Xem thông tin</a>
                                                <a class="dropdown-item" href="@Url.Action("Edit", "PHIEUTHU", new { id = item.SoPhieuThu})">Sửa thông tin</a>
                                                <a class="dropdown-item" href="@Url.Action("Delete", "PHIEUTHU", new { id = item.SoPhieuThu})">Xóa thông tin</a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>