                    <img id="img_logo" alt="UIT" style="width: 80px; height: 70px" src="@Url.Content("~/Content/img/uit_logo_removebg.png")" />
                    <span style="color: blue; font-weight: 900;" class="embed-responsive">Nhập Môn Công Nghệ Phần Mềm</span>
                </a>
            </li>

            <!-- Divider -->
            <li><hr class="sidebar-divider my-0"></li>


            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("PDTHome", "PDT", new {TenDangNhap = ViewData["TenDangNhap"]})">
                    <i class=""></i>
                    <span>Trang chủ phòng đào tạo</span>
                </a>
            </li>

            <!-- Divider -->
            <li>
                <hr class="sidebar-divider">
            </li>


            <!-- Heading -->
            <li class="sidebar-heading">
                Dịch vụ
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "SINHVIENs", new { area = "PDT" })">Danh sách sinh viên</a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-fw fa-cog"></i>
                    <span>Chương trình học</span>
                </a>

                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Chương trình học:</h6>
                        <a class="collapse-item" href="@Url.Action("Index", "KHOAs", new { area = "PDT" })">Quản lý khoa</a>
                        <a class="collapse-item" href="@Url.Action("Index", "NGANHs", new { area = "PDT" })">Chương trình học</a>
                    </div>
                </div>
            </li>


            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePages" aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-book"></i>
                    <span>Môn học mở</span>
                </a>
                <div id="collapsePages" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Môn học mở</h6>
                        @*<a class="collapse-item" href="@Url.Action("Index", "HKNHs", new { area = "PDT" })">Danh sách học kỳ</a>*@
                        <a class="collapse-item" href="@Url.Action("Index", "MONHOCs", new { area = "PDT" })">Danh sách môn học</a>
                        <a class="collapse-item" href="@Url.Action("ListHK", "DS_MONHOC_MOs", new { area = "PDT" })">Danh sách môn học mở</a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "PHIEU_DKHPs", new { area = "PDT" })">Đăng ký môn học</a>
