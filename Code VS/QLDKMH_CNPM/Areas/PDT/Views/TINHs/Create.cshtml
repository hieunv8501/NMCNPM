@model QLDKMH_CNPM.Models.TINH

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/PDT/Views/Shared/PDTLayout.cshtml";
}

<h3 class="text-left text-danger Controllerfont">THÊM MỚI THÔNG TIN TỈNH</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal card generalFont" style="color: black;">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label">
                Mã tỉnh
                @Html.EditorFor(model => model.MaTinh, new { htmlAttributes = new { @maxlength = "4", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaTinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label">
                Tên tỉnh
                @Html.EditorFor(model => model.TenTinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTinh, "", new { @class = "text-danger" })
            </div>
        </div>

        @if (ViewBag.m == "Sai")
        {
            <div class="alert alert-danger">Không hợp lệ! Mời nhập lại... </div>
        }

        <div class="form-group">
            <div class="control-label">
                <input type="submit" value="Thêm mới" class="btn btn-danger" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
