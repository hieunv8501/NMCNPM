@model QLDKMH_CNPM.Models.SINHVIEN

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/PDT/Views/Shared/PDTLayout.cshtml";
}
<style>
    div.upload {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        display: inline-block;
        height: 34px;
        position: relative;
        width: auto;
    }

        div.upload:hover {
            opacity: 0.95;
        }

        div.upload input[type="file"] {
            display: inline-block;
            width: 100%;
            height: 30px;
            opacity: 0;
            cursor: pointer;
            position: absolute;
            left: 0;
        }

    .uploadButton {
        background-color: #4e73df;
        border: none;
        border-radius: 3px;
        color: #FFF;
        cursor: pointer;
        display: inline-block;
        height: 30px;
        margin-right: 15px;
        width: auto;
        box-sizing: content-box;
    }

    .fileName {
        font-family: Arial;
        font-size: 14px;
    }

    .upload + .uploadButton {
        height: 30px;
        width: auto;
    }
</style>
<h3 class="text-left text-danger controllerStyle">THÊM MỚI THÔNG TIN SINH VIÊN</h3>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

@using (Html.BeginForm("Index", "SINHVIENs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @*if (ViewBag.Message == "Sai")
    {
        <div class="alert alert-danger">File excel tải lên không hợp lệ! Hãy tải lại... </div>
    }*@
    <p class="generalStyle" style="color:black"><strong>Tải lên thông tin sinh viên qua file Excel</strong></p>
    <div class="form-group">
        <div class="upload">
            <input type="button" class="uploadButton btnStyle generalStyle" value="Chọn đường dẫn" />
            <input type="file" name="upload" accept="/.xls, .xlsx" id="fileUpload" />
            <label class="fileName" style="width:auto; ">Đường dẫn file Excel...</label>
        </div>
        <input type="submit" class="btn btn-primary btnStyle generalStyle" value="Tải lên" />
    </div>
}
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal generalStyle" style="color: black;">
        @*<div style="color:white; font-weight:bold;">
                <span class="bg-gradient-info p-1">SINH VIÊN</span>
            </div>*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="generalStyle"><strong>Nhập thủ công thông tin sinh viên</strong></p>

        <div class="form-group">
            <div class="control-label">Mã sinh viên</div>
            <div>
                @Html.EditorFor(model => model.MaSV, new { htmlAttributes = new { @maxlength = "6", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaSV, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="control-label">Họ và tên sinh viên</div>
            <div>
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ">
            <div class="control-label">Ngày sinh (MM/dd/YYYY)</div>
            <div>
                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control datetimepicker" } })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label">Giới tính</div>
            <div>
                @Html.RadioButtonFor(model => model.GioiTinh, "Nam", new { @checked = "checked" })
                Nam
                @Html.RadioButtonFor(model => model.GioiTinh, "Nữ")
                Nữ
            </div>
        </div>

        <div class="form-group">
            <div class="control-label">Tỉnh</div>
            <div>
                @Html.DropDownList("MaTinh", null, "-- Chọn tỉnh --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HUYEN.TINH.TenTinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label">Huyện</div>
            <div>
                @Html.DropDownList("MaHuyen", null, "-- Chọn huyện --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HUYEN.TenHuyen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label">Ngành</div>
            <div>
                @Html.DropDownList("MaNganh", null, "-- Chọn ngành --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NGANH.TenNganh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label">Loại đối tượng ưu tiên</div>
            <div>
                @Html.DropDownList("MaDoiTuong", null, "-- Chọn đối tượng --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DOITUONG.TenDoiTuong, "", new { @class = "text-danger" })
            </div>
        </div>

        @if (ViewBag.Message == "Sai")
        {
            <div class="alert alert-danger">Không hợp lệ! Mời nhập lại... </div>
        }
        <hr />
        <div class="form-group">
            <div class="control-label">
                <input id="btnNew" type="submit" value="Thêm mới" class="btn btn-primary btnStyle" />
                <input type="button" value="Hủy" class="btn btn-primary generalStyle btnStyle" data-toggle="modal" data-target="#AlertModal1" />
                <input type="button" value="Quay về trang chủ" class="btn btn-primary btnStyle" data-toggle="modal" data-target="#AlertModal2" />
            </div>
        </div>
    </div>
}

<!--Cảnh báo thoát-->
<div class="modal fade" id="AlertModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title generalStyle" style="color:black; font-weight:700;" id="exampleModalLabel2">Thông báo</h5>
                <button class="close ge" type="button" data-dismiss="modal" aria-label="Close">
                    <span class="generalStyle" aria-hidden="true">x</span>
                </button>
            </div>
            <div class="modal-body generalStyle" style="color: black;">Thoát khi chưa lưu?</div>
            <div class="modal-footer generalStyle">
                <a class="btn btn-danger btnStyle" href="@Url.Action("Index", "SINHVIENs", new { area = "PDT" })">Đồng ý</a>
                <button class="btn btn-primary btnStyle" type="button" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<!--Cảnh báo thoát để về trang chủ-->
<div class="modal fade" id="AlertModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title generalStyle" style="color:black; font-weight:700;" id="exampleModalLabel2">Thông báo</h5>
                <button class="close ge" type="button" data-dismiss="modal" aria-label="Close">
                    <span class="generalStyle" aria-hidden="true">x</span>
                </button>
            </div>
            <div class="modal-body generalStyle" style="color: black;">Quay về trang chủ?</div>
            <div class="modal-footer generalStyle">
                <a class="btn btn-danger btnStyle" href="~/PDT/PDT/PDTHome">Đồng ý</a>
                <button class="btn btn-primary btnStyle" type="button" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<!--Chọn Tỉnh trước sau đó sẽ đổ dữ liệu của các Huyện thuộc tỉnh đó vào trong dropdownlist-->
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript">
$(document).ready(function () {
    $("#MaTinh").change(function () {
        $("#MaHuyen").empty();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("GetHuyen")',
            dataType: 'json',
            data: { id: $("#MaTinh").val() },
            success: function (city) {
                $.each(city, function (i, city) {
                    $("#MaHuyen").append('<option value="'  +  city.Value  +  '">'  +  city.Text  +  '</option>');
                });
            },
            error: function (ex) {
                alert('Failed.' + ex);
            }
        });
        return false;
    })
});
</script>

<!--Js để gọi tải file từ máy lên-->
<script>
    $('input[type=file]').change(function (e) {
        $in = $(this);
        $in.next().html($in.val());

    });

    $('.uploadButton').click(function () {
        var fileName = $("#fileUpload").val();
        if (fileName) {
            alert(fileName + " có thể tải lên.");
        }
        else {
            alert("Vui lòng chọn file Excel để tải lên");
        }
    });
</script>

<!--Javascript để gọi datetimepicker trong Ngày tháng-->
<script type="text/javascript">
    $(function () {
        $('.datetimepicker').datepicker();
    });
</script>