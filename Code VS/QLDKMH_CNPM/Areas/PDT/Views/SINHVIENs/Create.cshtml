@model QLDKMH_CNPM.Models.SINHVIEN

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/PDT/Views/Shared/PDTLayout.cshtml";
}

<h2 class="text-center bg-white">Thêm mới thông tin sinh viên</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div style="color:white; font-weight:bold;">
            <span class="bg-gradient-danger p-1">SINH VIÊN</span>
        </div>
        <hr />
        <div class="form-grousp">
            <div class="control-label col-md-2">Mã sinh viên</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaSV, new { htmlAttributes = new { @maxlength = "8", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaSV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Họ và tên sinh viên</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Ngày sinh (MM/dd/YYYY)</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Giới tính</div>
            <div class="col-md-10">
                @Html.RadioButtonFor(model => model.GioiTinh, "Nam", new { @checked = "checked" })
                Nam
                @Html.RadioButtonFor(model => model.GioiTinh, "Nữ")
                Nữ
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Tỉnh</div>
            <div class="col-md-10">
                @Html.DropDownList("MaTinh", null, "-- Chọn tỉnh --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HUYEN.TINH.TenTinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Huyện</div>
            <div class="col-md-10">
                @Html.DropDownList("MaHuyen", null, "-- Chọn huyện --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HUYEN.TenHuyen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Ngành</div>
            <div class="col-md-10">
                @Html.DropDownList("MaNganh", null, "-- Chọn ngành --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NGANH.TenNganh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Loại đối tượng</div>
            <div class="col-md-10">
                @Html.DropDownList("MaDoiTuong", null, "-- Chọn đối tượng --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DOITUONG.TenDoiTuong, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    </div>
}

