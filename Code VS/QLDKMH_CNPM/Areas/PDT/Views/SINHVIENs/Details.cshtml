@model QLDKMH_CNPM.Models.SINHVIEN

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/PDT/Views/Shared/PDTLayout.cshtml";
}

<h2 class="text-center bg-gradient-light get text-gray-900 Controllerfont">THÔNG TIN SINH VIÊN</h2>

<table class="table mt-3 generalFont" style="width:100%; font-weight:500;">
    <tbody>
        <tr>
            <th style="color:white; background-color:#4e37df">MSSV</th>
            <td style="color:white; background-color:#4e37df">@Html.DisplayFor(model => model.MaSV)</td>
        </tr>

        <tr class="bg-light">
            <th>Họ và Tên</th>
            <td>@Html.DisplayFor(model => model.HoTen)</td>
        </tr>

        <tr>
            <th style="color:white; background-color:#4e37df">Giới tính</th>
            <td style="color:white; background-color:#4e37df">@Html.DisplayFor(model => model.GioiTinh)</td>
        </tr>

        <tr class="bg-light">
            <th>Ngày sinh</th>
            <td>@Html.DisplayFor(model => model.NgaySinh.Day)/@Html.DisplayFor(model => model.NgaySinh.Month)/@Html.DisplayFor(model => model.NgaySinh.Year) </td>
        </tr>

        <tr>
            <th style="color:white; background-color:#4e37df">Quê quán</th>
            <td style="color:white; background-color:#4e37df">@Html.DisplayFor(model => model.HUYEN.TenHuyen) - @Html.DisplayFor(model => model.HUYEN.TINH.TenTinh)</td>
        </tr>

        <tr class="bg-light">
            <th>Ngành</th>
            <td>@Html.DisplayFor(model => model.NGANH.TenNganh)</td>
        </tr>

        <tr>
            <th style="color:white; background-color:#4e37df">Khoa</th>
            <td style="color:white; background-color:#4e37df">@Html.DisplayFor(model => model.NGANH.KHOA.TenKhoa)</td>
        </tr>

        <tr class="bg-light">
            <th>Loại đối tượng</th>
            <td>@Html.DisplayFor(model => model.DOITUONG.TenDoiTuong)</td>
        </tr>
    </tbody>
</table>
<hr />
@Html.ActionLink("Sửa", "Edit", new { id = Model.MaSV }, new { @class = "btn btn-danger", @style = "font-weight:500;" })
@Html.ActionLink("Quay lại", "Index", new { id = Model.MaSV }, new { @class = "btn btn-primary", @style = "font-weight:500;" })