@model IEnumerable<QLDKMH_CNPM.Models.NGANH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/PDT/Views/Shared/PDTLayout.cshtml";
}

<!--Page Heading-->
<h3 class="mb-1 text-danger Controllerfont">DANH SÁCH NGÀNH</h3>

<!--DataTable Showing-->
<div class="bg-light card Controllerfont">
    <div class="py-2">
        <h3 class="font-weight-bold text-primary">
            @Html.ActionLink("Thêm Ngành", "Create", null, new { @class = "btn btn-primary" })
        </h3>
    </div>

    <div id="dataTable_wrapper" class="dataTables_wrapper m-1 card-body m-1 p-1" style="background-color: white">
        <div>
            <div id="dataTable_wrapper" class="dataTables_wrapper">
                <table class="table table-bordered" id="dataTable">
                    <thead>
                        <tr>
                            <th width="600px">Ngành</th>
                            <th width="600px">Khoa</th>
                            <th style="text-align:center">Thao tác</th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                <tr style="font-weight: 100; color: black;">
                    <td>
                        @Html.DisplayFor(modelItem => item.TenNganh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KHOA.TenKhoa)
                    </td>
                    <td>
                        <div class="container">
                            <div class="dropdown nav-item">
                                <button type="button" class="btn btn-outline-danger dropdown-toggle alert-primary" style="font-weight:500; font-size:small;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    Tùy chọn
                                </button>
                                <div class="dropdown-menu" style="text-align:center;" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="@Url.Action("Details", "NGANHs", new {area ="PDT", id = item.MaNganh})">Xem thông tin</a>
                                    <a class="dropdown-item" href="@Url.Action("Edit", "NGANHs", new {area ="PDT", id = item.MaNganh})">Sửa thông tin</a>
                                    <a class="dropdown-item" href="@Url.Action("Delete", "NGANHs", new {area ="PDT", id = item.MaNganh})">Xóa thông tin</a>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>