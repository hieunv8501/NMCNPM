@model QLDKMH_CNPM.Models.NGANH

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/PDT/Views/Shared/PDTLayout.cshtml";
}

<h3 class="text-left text-danger Controllerfont">XÓA THÔNG TIN NGÀNH</h3>
<hr />
<div style="font-weight:100;" class="generalFont">
    <table class="table" width="100%">
        <tbody>
            <tr style="color: white; background-color:#4e37df">
                <th width="50%">Mã ngành</th>
                <td width="50%">@Html.DisplayFor(model => model.MaNganh)</td>
            </tr>

            <tr class="bg-light" style="color:black;">
                <th>Tên ngành</th>
                <td>@Html.DisplayFor(model => model.TenNganh)</td>
            </tr>

            <tr style="color: white; background-color:#4e37df">
                <th>Tên khoa</th>
                <td>@Html.DisplayFor(model => model.KHOA.TenKhoa)</td>
            </tr>
        </tbody>
    </table>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            @Html.ActionLink("Quay lại", "Index", new { id = Model.MaNganh }, new ={ @class = "btn btn-primary" })
        </div>
    }

</div>