@model IEnumerable<QLDKMH_CNPM.Models.HUYEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/PDT/Views/Shared/PDTLayout.cshtml";
}

<!--Page Heading-->
<h3 class="mb-1 text-danger Controllerfont">DANH SÁCH HUYỆN</h3>

<!--DataTable Showing-->
<div class="bg-light card Controllerfont">
    <div class="py-2">
        <span>
            @Html.ActionLink("Thêm Huyện", "Create", null, new { @class = "btn btn-primary" })
        </span>
        <span style="float:right">
            @Html.ActionLink("Quản lý Tỉnh", "Index", "TINHs", null, new { @class = "btn btn-primary" })
        </span>
    </div>

    <div id="dataTable_wrapper" class="dataTables_wrapper m-1 card-body m-1 p-1" style="background-color: white">
        <div>
            <div id="dataTable_wrapper" class="dataTables_wrapper">
                <table class="table table-bordered" id="dataTable">
                    <thead>
                        <tr>
                            <th width="700px">Thị xã/ Huyện/ Quận/ Thành phố </th>
                            <th width="700px">Tỉnh/ Thành phố</th>
                            <th style="text-align:center">Thao tác</th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr style="font-weight: 100;">
                            <td>
                                @Html.DisplayFor(modelItem => item.TenHuyen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TINH.TenTinh)
                            </td>
                            <td>
                                <div class="container">
                                    <div class="dropdown nav-item">
                                        <button type="button" class="btn btn-outline-danger dropdown-toggle alert-primary" style="font-weight:500; font-size:small;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                            Tùy chọn
                                        </button>
                                        <div class="dropdown-menu" style="text-align:center;" aria-labelledby="navbarDropdownMenuLink">
                                            <a class="dropdown-item" href="@Url.Action("Details", "HUYENs", new {area ="PDT", id = item.MaHuyen})">Xem thông tin</a>
                                            <a class="dropdown-item" href="@Url.Action("Edit", "HUYENs", new {area ="PDT", id = item.MaHuyen})">Sửa thông tin</a>
                                            <a class="dropdown-item" href="@Url.Action("Delete", "HUYENs", new {area ="PDT", id = item.MaHuyen})">Xóa thông tin</a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

