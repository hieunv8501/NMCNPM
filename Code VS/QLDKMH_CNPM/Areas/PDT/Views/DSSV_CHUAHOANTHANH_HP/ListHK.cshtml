@model IEnumerable<QLDKMH_CNPM.Models.HKNH>

@{ 
   ViewBag.Title = "ListHK";
   Layout = "~/Areas/PDT/Views/Shared/PDTLayout.cshtml"; 
}


<h3 class="mb-1 text-danger controllerStyle">BÁO CÁO SINH VIÊN CHƯA HOÀN THÀNH HỌC PHÍ</h3>
<hr />

<div class="form-group generalStyle" >
    <div>
        <select class="form-control namhoc" style="font-size:0.9rem;"  >
            <option value="0" selected>-- Chọn học kỳ --</option>
            @foreach (var item in Model)
            {
                <option value="@item.MaHKNH">HK @item.HocKy (@item.Nam1 - @item.Nam2)</option>            
            }
        </select>
        <br />
        @if (ViewBag.Message != "")
        {
            <div class="alert alert-warning generalStyle" style="color:black">@ViewBag.Message</div>
        }
        <a class="btn btn-primary generalStyle" style="font-size:.9rem;" id="link" href="@Url.Action("ListHK", "DSSV_CHUAHOANTHANH_HP", new {  })">Xem báo cáo</a>
    </div>

</div>

<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script>
    $(document).ready(function () {
        $("select.namhoc").change(function () {
            var selected = $(this).children("option:selected").val();
            if (selected == "0") {
                alert("Chưa chọn năm học!!!");
                document.getElementById("link").href = "/DSSV_CHUAHOANTHANH_HP/ListHK";
            }
            else {
                document.getElementById("link").href = "/PDT/DSSV_CHUAHOANTHANH_HP/Index/" + selected.toString();
            }
        });
    });
</script>

