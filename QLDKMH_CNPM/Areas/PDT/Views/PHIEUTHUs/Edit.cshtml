@model QLDKMH_CNPM.Models.PHIEUTHU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/PDT/Views/Shared/PDTLayout.cshtml";
}
<h3 class="text-left text-danger controllerStyle">SỬA THÔNG TIN PHIẾU THU</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal generalStyle" style="color: black;">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <hr />

    <div class="form-group">
        <div class="control-label">Số Phiếu DKHP</div>
        <div>
            @Html.DropDownList("SoPhieuDKHP", null, "-- Chọn Số Phiếu DKHP --", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PHIEU_DKHP.SoPhieuDKHP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label">Ngày lập (dd/MM/YYYY)</div>
        <div>
            @Html.EditorFor(model => model.NgayLap, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NgayLap, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label">Số tiền thu</div>
        <div>
            @Html.EditorFor(model => model.SoTienThu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoTienThu, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div>
            <input type="submit" value="Lưu" class="btn btn-danger btnStyle" />
            @Html.ActionLink("Quay lại", "Index", new { id = Model.SoPhieuThu }, new { @class = "btn btn-primary btnStyle" })
        </div>
    </div>
</div>

 <script src="~/Scripts/jquery-3.4.1.min.js"></script>
 <script type="text/javascript"></script>
}
