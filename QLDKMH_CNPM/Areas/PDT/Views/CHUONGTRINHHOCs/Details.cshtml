@model IEnumerable<QLDKMH_CNPM.Models.CHUONGTRINHHOC>

@{ ViewBag.Title = "Index";
    Layout = "~/Areas/PDT/Views/Shared/PDTLayout.cshtml"; }

<h3 class="mb-1 text-danger controllerStyle">
    CHƯƠNG TRÌNH HỌC
</h3>
<h4 class="text-danger controllerStyle">
    Ngành: @ViewBag.TenNganh
</h4>
<hr class="mb-0" />

<div class="bg-light card generalStyle">
    <div class="py-2 m-0">
        <span>
            @Html.ActionLink("Thêm môn học vào chương trình học", "Create", new { id = ViewBag.MaNganh }, new { @class = "btn btn-primary btnStyle" })
        </span>
    </div>
    <div id="dataTable_wrapper" class="dataTables_wrapper pre-scrollable card-body m-1 p-1" style="background-color: white">
        <div>
            <div id="dataTable_wrapper" class="dataTables_wrapper">
                <!--id = dataTable shows number of entries; sort and search function-->
                <table class="table table-bordered dataStyle dataTable" id="dataTable">
                    <thead>
                        <tr>
                            <th width="10%">Học kỳ</th>
                            <th width="15%">Mã môn học</th>
                            <th width="25%">Tên môn học</th>
                            <th width="15%">Số tín chỉ</th>
                            <th width="20%">Ghi chú</th>
                            <th width="20%" style="text-align:center">Thao tác</th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
        <tr>
            <th style="vertical-align: middle;">
                @Html.DisplayFor(model => item.HocKy)
            </th>
            <td style="vertical-align: middle;">
                @Html.DisplayFor(model => item.MaMonHoc)
            </td>
            <td style="vertical-align: middle;">
                @Html.DisplayFor(model => item.MONHOC.TenMonHoc)
            </td>
            <td style="vertical-align: middle;">
                @Html.DisplayFor(model => item.MONHOC.SoTinChi)
            </td>
            <td style="vertical-align: middle;">
                @Html.DisplayFor(model => item.GhiChu)
            </td>

            <td style="vertical-align: middle;">
                <div class="container">
                    <div class="dropdown nav-item">
                        <button type="button" class="btn btn-outline-danger dropdown-toggle alert-primary" style="font-weight:500; font-size:small;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Tùy chọn
                        </button>
                        <div class="dropdown-menu" style="text-align:center" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="@Url.Action("Edit", "CHUONGTRINHHOCs", new { id_1 = item.MaNganh, id_2 = item.MaMonHoc})">Sửa thông tin</a>
                            <a class="dropdown-item" href="@Url.Action("Delete", "CHUONGTRINHHOCs", new { id_1 = item.MaNganh, id_2 = item.MaMonHoc})">Xóa thông tin</a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>}
                </table>
            </div>

        </div>
    </div>
    <hr />
    <div class="form-group">
        <div>
            <a class="btn btn-primary btnStyle" href="~/PDT/CHUONGTRINHHOCs/Index/">Quay lại</a>
        </div>
    </div>
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@if (ViewBag.code == 10)
{
<script type="text/javascript">swal("Đã thêm môn học vào chương trình học thành công", "", "success");</script>}
@if (ViewBag.code == 11)
{
<script type="text/javascript">swal("Đã xóa môn học khỏi chương trình học thành công", "", "success");</script>}
@if (ViewBag.code == 12)
{
<script type="text/javascript">swal("Đã sửa thông tin thành công", "", "success");</script>}