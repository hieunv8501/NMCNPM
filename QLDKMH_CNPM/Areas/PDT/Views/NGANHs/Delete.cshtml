@model QLDKMH_CNPM.Models.NGANH

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/PDT/Views/Shared/PDTLayout.cshtml";
}

<h3 class="text-left text-danger controllerStyle">XÓA THÔNG TIN NGÀNH</h3>
<hr />
<div style="font-weight:100;" class="generalStyle">
    <table class="table" width="100%">
        <tbody>
            <tr style="color: white; background-color: #4e73df">
                <th width="50%">Mã ngành</th>
                <td width="50%">@Html.DisplayFor(model => model.MaNganh)</td>
            </tr>

            <tr class="bg-light" style="color:black;">
                <th>Tên ngành</th>
                <td>@Html.DisplayFor(model => model.TenNganh)</td>
            </tr>

            <tr style="color: white; background-color: #4e73df">
                <th>Khoa quản lý</th>
                <td>@Html.DisplayFor(model => model.KHOA.TenKhoa)</td>
            </tr>
        </tbody>
    </table>

    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <h6 class="text-left text-danger controllerStyle">Bạn có muốn xóa thông tin ngành này?</h6>
            <input type="submit" value="Xóa" class="btn btn-danger btnStyle" />
            @Html.ActionLink("Quay lại", "Index", new { id = Model.MaNganh }, new { @class = "btn btn-primary generalStyle btnStyle" })
        </div>
    }

</div>