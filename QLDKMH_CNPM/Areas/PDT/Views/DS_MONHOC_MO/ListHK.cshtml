@model IEnumerable<QLDKMH_CNPM.Models.HKNH>
@{ ViewBag.Title = "ListHK";
    Layout = "~/Areas/PDT/Views/Shared/PDTLayout.cshtml"; }

<h3 class="mb-1 text-danger controllerStyle">DANH SÁCH LỚP HỌC MỞ TRONG CÁC KỲ</h3>
<hr class="mb-0" />
<div class="bg-light card generalStyle">
    <div class="py-2 m-0">
        <span style="float: right;">
            @Html.ActionLink("Quản lý Học kỳ", "Index", "HKNHs", null, new { id = ViewBag.MaHKNH, @class = "btn btn-primary btnStyle" })
        </span>
    </div>
    <div id="dataTable_wrapper" class="dataTables_wrapper pre-scrollable card-body m-1 p-1" style="background-color: white">
        <div>
            <div id="dataTable_wrapper" class="dataTables_wrapper">
                <table class="table table-bordered dataStyle text-center" id="dataTable">
                    <thead>
                        <tr>
                           
                            <th width="35%">Năm học</th>
                            <th width="20%">Học kỳ</th>
                            <th width="45%" style="text-align:center">Danh sách lớp học mở</th>
                        </tr>
                    </thead>
                   
                    @foreach (var item in Model)
                    {
                        <tr>
                            
                            <td style="vertical-align: middle;" >
                                @Html.DisplayFor(modelItem => item.Nam1) - @Html.DisplayFor(modelItem => item.Nam2)
                            </td>
                            <td style="vertical-align: middle;">
                                @Html.DisplayFor(modelItem => item.HocKy)
                            </td>
                            <td style="text-align: center">
                                <a href="@Url.Action("Index", "DS_MONHOC_MO", new { area = "PDT", id = item.MaHKNH })">Xem danh sách lớp học mở</a>
                            </td>
                        </tr>

                    }
                </table>
            </div>
        </div>
    </div>
</div>